<UserControl x:Class="FlightSimulatorApp.Views.FuzzyDiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.Views"
             mc:Ignorable="d" d:DesignWidth="186.111" Height="125.111">
    <Grid>
        <Image Source="/Resources/fuzzydice.png" Canvas.Left="-255" Canvas.Top="-124" RenderTransformOrigin="0.508,0.171" Margin="32,0,39,0.333">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="{Binding VM_Roll}"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</UserControl>
